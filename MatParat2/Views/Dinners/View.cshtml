@model MatParat2.Models.UpdateDinnerViewModel

@{
}


<h1> Edit Dinner </h1>
<form method="post" action="View" enctype="multipart/form-data">

    <div class="mb-3">
        <label for=""> Id </label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>

    <div class="mb-3">
        <label for=""> Name </label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label for=""> Type </label>
        <select class="form-control" asp-for="Type">
            <option value="Fish"> Fish </option>
            <option value="Meat"> Meat </option>
            <option value="Chicken"> Chicken </option>
            <option value="Vegan"> Vegan </option>
            <option value="Other"> Other </option>
        </select>
    </div>

    <div class="mb-3">
        <label for=""> Ingredients </label>
        <input type="text" class="form-control" asp-for="Ingredients" placeholder="Separate by commas (guanchale, panchetta, etc.)">
    </div>

    <div class="mb-3">
        <label for=""> Description </label>
        <input type="text" class="form-control" asp-for="Description">
    </div>

    <div class="mb-3">
        <label for=""> Image </label>
        <input type="file" class="form-control" name="imageFile" accept="image/*">
    </div>


    <button type="submit" class="btn btn-primary"> Submit </button>

    <button type="submit" class="btn btn-danger" asp-action="Delete", asp-controller="Dinners"> Delete </button>
</form>